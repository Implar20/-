page {
    background-color: rgba(248, 248, 248, 1);
}
.content {
    width: 100%;
}
.content .content_item {
    margin-top: 10rpx;
    width: 100%;
    height: 210rpx;
}
.content_item .item_header {
    width: 100%;
    height: 72rpx;
    background-color: rgba(93, 107, 133, 1);
    display: flex;
    align-items: center;
}
.item_header icon {
    margin-left: 20rpx;
}
.item_header text {
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #fff;
}
.item_header image {
    width: 36rpx;
    height: 36rpx;
    margin-left: 515rpx;
}
.content_item .item_content {
    width: 100%;
    height: 136rpx;
    background-color: rgba(93, 107, 133, 1);
    margin-top: 2rpx;
    position: relative;
    color: #fff;
}
.item_content .item_name {
    position: absolute;
    top: 20rpx;
    left: 44rpx;
    font-size: 28rpx;
}
.item_content .item_tel {
    position: absolute;
    right: 84rpx;
    top: 20rpx;
    font-size: 28rpx;
}
.item_content .item_addr {
    position: absolute;
    left: 42rpx;
    top: 74rpx;
    font-size: 24rpx;
}
.item_content image {
    position: absolute;
    top: 48rpx;
    right: 12rpx;
    width: 44rpx;
    height: 44rpx;
}
.content .footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 102rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #fff;
    font-size: 28rpx;
}
.footer .footer_btn {
    width: 256rpx;
    height: 72rpx;
    background-color: rgba(220, 39, 38, 1);
    border-radius: 200rpx;
    line-height: 72rpx;
}