.content_item .content_icon {
    position: absolute;
    right: 20rpx;
    top: 50rpx;
}
.content_item .content_del {
    position: absolute;
    bottom: 28rpx;
    right: 20rpx;
    width: 34rpx;
    height: 34rpx;
}
.content_item .content_select {
    position: absolute;
    bottom: 16rpx;
    left: 214rpx;
    width: 220rpx;
    height: 60rpx;
    background-color: #f8f8f8;
    border-radius: 12rpx;
    border: 1rpx solid #d8d8d8;
    overflow: hidden;
}
.content_select .min {
    position: absolute;
    top: 5rpx;
    left: 18rpx;
    width: 36rpx;
    height: 36rpx;
}
.content_select .add {
    position: absolute;
    top: 5rpx;
    right: 8rpx;
    width: 36rpx;
    height: 36rpx;
}
.content_select .num {
    position: absolute;
    width: 110rpx;
    height: 60rpx;
    background-color: #fff;
    margin-left: 50rpx;
    text-align: center;
    border: 0 solid #e5e5e5;
    border-left-width: 1px;
    border-right-width: 1px;
    font-size: 24rpx;
    color: #000;
    line-height: 60rpx;
}
.content .content_mask {
    width: 100%;
    height: 100rpx;
    background-color: rgba(239, 243, 246, 1);
}
.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
}
.footer .footer_icon {
    margin-left: 20rpx;
}
.footer .footer_all {
    color: rgba(74, 74, 74, 1);
    font-size: 24rpx;
    margin-left: 22rpx;
}
.footer .footer_total {
    margin-left: 226rpx;
    font-size: 24rpx;
    color: rgba(74, 74, 74, 1);
}
.footer .footer_totalPrice {
    color: rgba(255, 64, 64, 1);
    font-size: 24rpx;
}
.footer .footer_btn {
    position: absolute;
    right: 0;
    width: 200rpx;
    height: 100%;
    background-color: rgba(255, 64, 64, 1);
    text-align: center;
    line-height: 100rpx;
    font-size: 32rpx;
    color: #fff;
}