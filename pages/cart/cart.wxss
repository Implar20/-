.header .icon_text {
    width: 60rpx;
    height: 36rpx;
    background-color: red;
    margin-left: 20rpx;
    border-radius: 50rpx;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    line-height: 36rpx;
}
.content {
    width: 100%;
}
.content .content_item {
    width: 100%;
    height: 230rpx;
    background-color: rgba(248, 248, 248, 1);
    position: relative;
}
.content_item navigator {
    width: 170rpx;
    height: 170rpx;
}
.content_item .content_pic {
    width: 100%;
    height: 100%;
    margin-left: 24rpx;
    margin-top: 17rpx;
}
.content_item .content_title {
    position: absolute;
    top: 17rpx;
    left: 214rpx;
    font-size: 24rpx;
    color: #000;
    width: 320rpx;
    height: 70rpx;
}
.content_item .content_price {
    position: absolute;
    top: 8rpx;
    left: 590rpx;
    font-size: 24rpx;
    color: rgba(255, 64, 64, 1)
}
