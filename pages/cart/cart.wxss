.container {
    width: 100%;
}
.header {
    width: 100%;
    height: 86rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.header view {
    display: inline-block;
    width: 120rpx;
    height: 40rpx;
    color: rgba(205, 39, 35, 1);
    font-size: 24rpx;
    margin-left: 20rpx;
    margin-top: 28rpx;
}
