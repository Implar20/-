.container {
  width: 100%;
  background-color: #fff;
}
.header {
  width: 100%;
  height: 80rpx;
  background-color: rgba(255, 64, 64, 1);
  display: flex;
  align-items: center;
  color: #fff;
}
.header .search {
  width: 80%;
  height: 50rpx;
  background-color: #fff;
  border-radius: 200rpx;
  display: flex;
  align-items: center;
  margin: 0 auto;
}
.search image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
}
.search text {
  margin: 0 auto;
  width: 300rpx;
  height: 50rpx;
  min-height: 50rpx;
  font-size: 30rpx;
  color: #ddd;
  line-height: 50rpx;
}
.banner {
  width: 100%;
  height: 350rpx;
  background-color: pink;
}
.banner swiper {
  width: 100%;
  height: 100%;
}
swiper image {
  width: 100%;
  height: 100%;
}
.nav {
  width: 100%;
  height: 174rpx;
  background-color: #eee;
}
.nav .nav_info {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.nav_info .nav_info_item {
  text-align: center;
  font-size: 23rpx;
  width: 88rpx;
  height: 88rpx;
  color: rgba(103, 103, 103, 1)
}
.nav_info_item image {
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.content .content_item {
  margin-top: 15rpx;
  width: 49%;
  height: 584rpx;
  background-color: #eee;
  position: relative;
}
.content_item .content_in {
  width: 344rpx;
  height: 570rpx;
  margin: auto;
  margin-top: 10rpx;
}
.content_in navigator {
  width: 344rpx;
  height: 344rpx;
}
navigator .item_pic {
  width: 100%;
  height: 100%;
}
.content_in .item_title {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: rgba(100, 100, 100, 1);
}
.content_in .item_bla {
  margin-top: 8rpx;
  width: 100%;
  height: 34rpx;
  font-size: 24rpx;
  color: rgba(156, 156, 156, 1);
}
.item_bla .item_lastPrice {
  float: right;
  text-decoration: line-through;
}
.dot_line {
  width: 100%;
  height: 6rpx;
  margin-top: 12rpx;
}
.store {
  width: 150rpx;
  height: 36rpx;
  position: absolute;
  bottom: 20rpx;
  border: 1px solid red;
  border-radius: 4rpx;
}
.store_left {
  width: 80rpx;
  height: 36rpx;
  background-color: red;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  float: left;
}
.store_right {
  width: 68rpx;
  height: 36rpx;
  text-align: center;
  font-size: 24rpx;
  color: red;
  float: right;
}
.price {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width: 160rpx;
  height: 36rpx;
}
.price_left {
  width: 80rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: rgba(150, 150, 150, 1);
  text-align: center;
  float: left;
}
.price_right {
  width: 80rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: red;
  float: right;
}