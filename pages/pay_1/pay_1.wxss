page {
    background-color: rgba(244, 245, 249, 1);
}
.header {
    position: relative;
    width: 100%;
    height: 245rpx;
    background-color: #fff;
    margin-top: 2rpx;
    color: #000;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}
.header image {
    display: inline-block;
    width: 254rpx;
    height: 245rpx;
}
.header .header_title {
    position: absolute;
    top: 19rpx;
    left: 266rpx;
}
.header .header_price {
    position: absolute;
    bottom: 36rpx;
    left: 262rpx;
    color: rgba(250, 94, 95, 1);
}
.content {
    width: 100%;
}
.content_header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 164rpx;
    background-color: #fff;
    color: rgba(74, 74, 74, 1);
    font-size: 32rpx;
}
.content_header text {
    margin-left: 30rpx;
}
.content_header .header_group {
    width: 350rpx;
    text-align: right;
    height: 100%;
    margin-left: 150rpx;
    margin-top: 20rpx;
    font-size: 24rpx;
}
.header_group .group_title {
    margin-top: 27rpx;
}
.header_group .group_addr {
    margin-top: 7rpx;
}
.content_header image {
    width: 24rpx;
    height: 42rpx;
    margin-left: 30rpx;
}
.content_section {
    display: flex;
    align-items: center;
    width: 100%;
    height: 160rpx;
    color: rgba(74, 74, 74, 1);
    font-size: 32rpx;
    background-color: #fff;
    margin-top: 2rpx;
}
.content_section text {
    margin-left: 30rpx;
}
.content_section .section_price {
    margin-left: 550rpx;
    color: rgba(250, 94, 95, 1);
}
.content_footer {
    display: flex;
    align-items: center;
    width: 100%;
    height: 121rpx;
    background-color: #fff;
    color: rgba(74, 74, 74, 1);
    font-size: 32rpx;
    margin-top: 2rpx;
}
.content_footer text {
    margin-left: 30rpx;
}
.content_footer .footer_price {
    margin-left: 0;
    color: rgba(250, 94, 95, 1);
}
.content_footer image {
    width: 48rpx;
    height: 48rpx;
    margin-left: 500rpx;
}
.footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 91rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}
.footer text {
    margin-left: 37rpx;
}
.footer .footer_total {
    font-size: 32rpx;
    margin-left: 0;
    color: rgba(250, 94, 95, 1);
}
.footer .footer_btn {
    position: absolute;
    right: 0;
    width: 245rpx;
    height: 100%;
    background-color: rgba(220, 39, 38, 1);
    color: #fff;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
}
