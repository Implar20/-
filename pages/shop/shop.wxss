.container {
    width: 100%;
}
swiper {
    width: 100%;
    height: 600rpx;
}
swiper image {
    width: 100%;
    height: 100%;
}
.content {
    width: 100%;
    position: relative;
}
.content_title {
    width: 694rpx;
    height: 88rpx;
    font-size: 32rpx;
    margin: auto;
    margin-top: 20rpx;
    font-weight: bold;
}
.content_price {
    width: 694rpx;
    margin: auto;
    display: flex;
    align-items: baseline;
}
.content_price text {
    color: rgb(250, 94, 95);
    font-size: 32rpx;
}
.content_price .last_price {
    font-size: 24rpx;
    color: rgb(74, 74, 74);
    text-decoration-line: line-through;
    margin-left: 20rpx;
}
.content_share {
    margin-left: 450rpx;
    width: 70rpx;
    height: 100rpx;
    position: relative;
    top: 30rpx;
    background-color: #fff;
}
.content_share::after {
    border: 0;
}
.share_hover {
    background-color: #fff;
}
.content_share  .icon_share {
    position: absolute;
    top: 15rpx;
    right: 12rpx;
    width: 44rpx;
    height: 44rpx;
    margin-left: 13rpx;
}
.content_share .text_share {
    font-size: 24rpx;
    position: absolute;
    bottom: -10rpx;
    left: 10rpx;
    color: rgb(74, 74, 74)
}
.content_has {
    width: 100%;
    height: 140rpx;
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 24rpx;
    color: rgba(145, 121, 57, 1)
}
.content_has .has_yun {
    width: 200rpx;
    height: 40rpx;
}
.content_has .has_sale {
    width: 200rpx;
    height: 40rpx;
}
.content_has .has_has {
    width: 200rpx;
    height: 40rpx;
}
.has_has, .has_sale, .has_yun {
    text-align: center;
    line-height: 40rpx;
}
.content_int {
    color: rgba(246, 205, 38, 1);
    width: 150rpx;
    height: 35rpx;
    font-size: 24rpx;
    margin: 0 auto;
    margin-top: 10rpx;
}
.footer {
    width: 100%;
    height: 100rpx;
    background-color: green;
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
}
.footer navigator {
    display: inline-block;
}
.footer .footer_chat {
    width: 33.3%;
    height: 100rpx;
    text-align: center;
    background-color: #fff;
    font-size: 20rpx;
    color: rgba(166, 166, 166, 1);
    line-height: 100rpx;
    position: relative;
}
.footer_chat image {
    width: 36rpx;
    height: 36rpx;
}
.footer_chat text {
    position: absolute;
    top: 25rpx;
    left: 0;
    right: 0;
    margin: auto;
}
.footer .footer_shop {
    width: 33.3%;
    height: 100rpx;
    background-color: rgba(255, 116, 116, 1);
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
}
.footer .footer_buy {
    width: 33.3%;
    height: 100rpx;
    background-color: rgba(255, 64, 64, 1);
    font-size: 32rpx;
    color: #ffffff;
    text-align: center;
    line-height: 100rpx;
}
.push_carts {
    position: absolute;
    width: 356rpx;
    height: 110rpx;
    bottom: 100rpx;
    left: 210rpx;
}